    //    });
    //});
    $(document).ready(function () {
        //$('#accordian li').first().addClass("active").find('ul').show();
        //$('#accordian li').selected().addClass("active").find('ul').show();
        $('#accordian > li > a').click(function () {
            if ($(this).attr('class') != 'active') {
                $('#accordian li ul').slideUp();
                $(this).next().slideToggle();
                $('#accordian li a').removeClass('active');
                $(this).addClass('active');
            }
        });
    });
</script>  