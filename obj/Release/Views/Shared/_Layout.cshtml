<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - COE Office</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="icon" type="image/gif" href="~/Images/sxclogo_jN2_icon.ico" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                   @* <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>*@
                     <div><img src="~/Content/sxclogojpg.jpg" width="50" height="50"/>
                        <div class="site-title"><span>St. Xavier's College (Autonomous), Kolkata </span></div>
                    </div>
                         @*<p class="site-title">@Html.ActionLink("~/Content/sxclogojpg.jpg", "Index", "Home")</p>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                            <li class="dropdown">
                            <a href="javascript:void(0)" class="dropbtn">Time Table</a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Dept wise","DepSm","TimeTable")
                                @Html.ActionLink("Date wise","DatewiseTT","TimeTable")
                            </div>
                            </li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>                    
                        </ul>
                        
                    </nav>
                </div>
                
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    @*<nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>                           
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>                        
                    </nav>    *@                
                </div>                  
                </div>                                     
        </header>         
        <div id="body">             
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">                
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Date.ToShortDateString() - My ASP.NET MVC Application</p>
                    @*@DateTime.Now.Date.ToShortDateString()*@
                </div>
                <div class="float-right">
                    @*@ViewBag.SN*@AKS
                </div>
            </div>
        </footer>

        @*@Scripts.Render("~/bundles/jquery")*@
        @RenderSection("scripts", required: false)
    </body>
</html>
