

@model List<MvcApplication1.Models.Count>
@*@model MvcApplication1.Models.Count*@
@{
    ViewBag.Title = "Gridveiw using simple foreach";
   
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}
<h2>Display count table in Webgrid view</h2>
    
    @grid.GetHtml(tableStyle:"webgrid-table",
                headerStyle:"webgrid-header",
                footerStyle:"webgrid-footer",
                alternatingRowStyle:"webgrid-alternating-row",
                rowStyle:"webgrid-row-style",
    mode:WebGridPagerModes.All,
    firstText:"<<First",
    previousText:"<Prev",
    nextText:"Next>",
    lastText:"Last>>",
    columns:grid.Columns(
    grid.Column("Sub_PCode","Subject"),
    grid.Column("Reg","Reg"),
    grid.Column("Arr","Arrear"),
    grid.Column("Total","Total"),
    grid.Column("Campus_ID","Campus")
    )
    )



